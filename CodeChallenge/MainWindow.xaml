<Window x:Class="CodeChallenge.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CodeChallenge"
        mc:Ignorable="d"
        Title="Book Inventory" Height="450" Width="800">
    <Grid>
        <ListView
            HorizontalAlignment = "Left" Height = "299" Margin = "10,10,0,0" 
            VerticalAlignment = "Top" Width = "497"
            ItemsSource="{Binding Books}"
            SelectedItem="{Binding SelectedBook}"
            >
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Author" DisplayMemberBinding="{Binding Author}" />
                    <GridViewColumn Header="Title" DisplayMemberBinding="{Binding Title}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button 
            Content="Delete Book" 
            HorizontalAlignment="Left" 
            Margin="512,10,0,0" 
            VerticalAlignment="Top" 
            Width="75"
            Click="RemoveClick"
            IsEnabled="{Binding IsButtonEnabled}"
            />
    </Grid>
</Window>
